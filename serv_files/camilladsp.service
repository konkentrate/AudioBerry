[Unit]
After=syslog.target
StartLimitIntervalSec=10
StartLimitBurst=10

[Service]
Type=simple
# ADAPT FILEPATHS HERE
ExecStart= /home/top/cdsp/camilladsp -g-6 -l error -o /home/top/cdsp/camilladsp.log -p 1234 /home/top/cdsp/configs/default.yml
Restart=always
RestartSec=1
LogLevelMax=debug
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=camilladsp
User=root
Group=root
CPUSchedulingPolicy=fifo
CPUSchedulingPriority=10

[Install]
WantedBy=multi-user.target
